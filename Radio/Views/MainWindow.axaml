<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Radio.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:System.Reactive;assembly=System.Reactive"
        xmlns:componentModel="clr-namespace:System.ComponentModel;assembly=System.ComponentModel.Primitives"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Radio.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Radio">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <ListBox Items="{Binding Objects}"
             SelectedItem="{Binding SelectedObject}">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Text="{Binding Id}" Grid.Column="0"/>
                    <StackPanel Grid.Column="1">
                        <Button Name="Delete" Width="160">Delete</Button>
                        <Button Name="Update" Width="160">Update</Button>
                    </StackPanel>
                </Grid>
            </DataTemplate>
   
        </ListBox.ItemTemplate>
    </ListBox>

    


</Window>
